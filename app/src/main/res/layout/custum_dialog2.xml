<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:paddingTop="30dp"
    android:paddingBottom="40dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_select_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="choose you shop status..."
        android:textColor="@color/lightGreen"
        android:textStyle="italic|bold"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_select_option"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_open_shop"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/open" />

        <TextView
            android:id="@+id/tv_shop_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Open shop"
            android:textColor="@color/lightGreen"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_select_option"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close_shop"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/close" />

        <TextView
            android:id="@+id/tv_shop_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close shop"
            android:layout_marginStart="15dp"
            android:textColor="@color/lightGreen"
            android:textSize="18sp" />

    </LinearLayout>


</RelativeLayout>