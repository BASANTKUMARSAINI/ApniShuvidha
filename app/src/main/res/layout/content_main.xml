     <ImageView
         android:layout_width="200dp"
         android:layout_height="150dp"

         android:id="@+id/img_applogo"
         android:layout_alignParentTop="true"

         android:layout_centerHorizontal="true"
         android:layout_marginTop="50dp"
         android:src="@drawable/applogo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_app_tag_line"
        android:layout_marginTop="-20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_applogo"
        android:text="@string/app_tag_line"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"
        android:layout_below="@id/tv_app_tag_line"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Join now"
        android:textSize="25sp"
        android:onClick="registration"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/input_button"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="login"
        android:textSize="25sp"
        android:onClick="signIn"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"

        android:background="@drawable/buttons"
        />
</RelativeLayout>